@page
@model HaCongHieuRazorPages.Pages.NewsArticleManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewsArticle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsArticle.NewsArticleId" class="control-label"></label>
                <input asp-for="NewsArticle.NewsArticleId" class="form-control" />
                <span asp-validation-for="NewsArticle.NewsArticleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.NewsTitle" class="control-label"></label>
                <textarea asp-for="NewsArticle.NewsTitle" class="form-control" style="max-height: 150px; overflow-y: auto;"></textarea>
                <span asp-validation-for="NewsArticle.NewsTitle" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="NewsArticle.CreatedDate" class="control-label"></label>
                <input asp-for="NewsArticle.CreatedDate" class="form-control" />
                <span asp-validation-for="NewsArticle.CreatedDate" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="NewsArticle.NewsContent" class="control-label"></label>
                <textarea asp-for="NewsArticle.NewsContent" class="form-control" style="max-height: 250px; overflow-y: auto;"></textarea>
                <span asp-validation-for="NewsArticle.NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.CategoryId" class="control-label"></label>
                <select asp-for="NewsArticle.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.NewsStatus" class="control-label"></label>
                <select asp-for="NewsArticle.NewsStatus" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="NewsArticle.NewsStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.CreatedById" class="control-label"></label>
                <input type="hidden" asp-for="NewsArticle.CreatedById" />
                <input class="form-control" value="@Model.CurrentUserId" readonly />
            </div>
@*             <div class="form-group">
                <label asp-for="NewsArticle.ModifiedDate" class="control-label"></label>
                <input asp-for="NewsArticle.ModifiedDate" class="form-control" />
                <span asp-validation-for="NewsArticle.ModifiedDate" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label>Tags</label>
                @foreach (var tag in Model.AvailableTags)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="tag_@tag.TagId" name="SelectedTagIds" value="@tag.TagId">
                        <label class="form-check-label" for="tag_@tag.TagId">
                            @tag.TagName
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
